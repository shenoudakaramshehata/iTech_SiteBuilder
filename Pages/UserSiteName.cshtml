                                            <span asp-validation-for="@Model.SiteObj.UserDomain?" class="text-danger"></span>
                                            
                                            @{
                                                if (BrowserCulture == "en-US")
                                                {
                                                    <div class="fs-13 fw-semibold text-start d-flex">
                                                        @if (Model.TemplateObj.TemplatePrice == 0)
                                                        {
                                                            <div class="col-8">
                                                                <p>Template used : @Model.TemplateObj.TitleEn</p>
                                                            </div>
                                                            <div class="col-4">
                                                                <p> Price : <span>Free</span></p>
                                                            </div>


                                                        }
                                                        else
                                                        {
                                                            <div class="col-8">
                                                                <p>Template used : @Model.TemplateObj.TitleEn</p>
                                                            </div>
                                                            <div class="col-4">
                                                                <p> Price : <span>@Model.TemplateObj.TemplatePrice</span></p>
                                                            </div>


                                                        }


                                                    </div>
                                                }
                                                else
                                                {
                                                    <div class="fs-5 fw-semibold text-start d-flex">
                                                        @if (Model.TemplateObj.TemplatePrice == 0)
                                                        {
                                                            <div class="col-8">
                                                                <p>اسم النموذج : @Model.TemplateObj.TitleAr </p>
                                                            </div>
                                                            <div class="col-4">
                                                                <p> السعر : <span>مجاني</span></p>
                                                            </div>

                                                        }
                                                        else
                                                        {
                                                            <div class="col-8">
                                                                <p>اسم النموذج : @Model.TemplateObj.TitleAr </p>
                                                            </div>
                                                            <div class="col-4">
                                                                <p> السعر : <span>@Model.TemplateObj.TemplatePrice</span></p>
                                                            </div>


                                                        }


                                                    </div>
                                                }
                                            }
                                        </div>
                                    </div>
                                   
                                            <div class="row">
                                                <div class="form-group col">
                                                    @*<a class="float-end" href="#">(Lost Password?)</a>*@
                                                    <input type="text" asp-for="@Model.TokenValue" placeholder=@sharedResource["Enter Affiliate Token"] class="form-control form-control-lg" hidden>
                                            
                                                </div>
                                            </div>
                                        

                                   
                                    <div class="row">
                                        @{
                                            if (Model.TemplateObj.TemplatePrice == 0)
                                            {
                                                <div class="form-group col-lg-6">
                                                    <input type="submit" value=@sharedResource["Create"] class="btn btn-primary btn-modern float-end" data-loading-text="Loading...">
                                                    </div>

                                                <div class="form-group col-lg-6" style=" padding-right: 12rem;">
                                                    <a asp-page="/index" class="btn btn-primary btn-modern float-end" >@sharedResource["Back"]</a>

                                                </div>
                                               
                                            }
                                            else
                                            {
                                                <div class="form-group col-lg-6">
                                                    <input type="submit" value=@sharedResource["Go To Payment"] class="btn btn-primary btn-modern float-end" data-loading-text="Loading...">
                                                    </div>
                                                <div class="form-group col-lg-6">
                                                   
                                                    <a asp-page="/index" class="btn btn-success waves-effect me-4">@sharedResource["Back"]</a>
                                                </div>
                                            }
                                        }
                                       
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
