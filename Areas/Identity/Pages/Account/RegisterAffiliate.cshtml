    function formatAccountNumber() {
        console.log("sadada")
        var input = document.getElementById("accountNumber").value.replace(/[^0-9]/g, ""); // Remove non-digit characters
        console.log(input)
        var formattedInput = "";

        for (var i = 0; i < input.length; i++) {
            if (i > 0 && i % 4 == 0) {
                formattedInput += "-";
            }
            formattedInput += input.charAt(i);
        }

        document.getElementById("accountNumber").value = formattedInput;
    }
</script>

