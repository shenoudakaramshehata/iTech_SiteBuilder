
@model iTech.Models.AffiliateVideo


<div class="modal fade" id="showEditAffVideoModal" tabindex="-1" aria-labelledby="AddModalLabel" aria-hidden="true" role="dialog">
    <!--begin::Modal dialog-->
    <div b-cpu6lo70wp="" class="modal-dialog modal-dialog-centered mw-900px">
        <!--begin::Modal content-->
        <div b-cpu6lo70wp="" class="modal-content">
            <!--begin::Modal header-->
            <div b-cpu6lo70wp="" class="modal-header">
                <!--begin::Modal title-->
                <h2 b-cpu6lo70wp="">@(sharedResource["Edit Affiliate Feedback Details"])</h2>
                <!--end::Modal title-->
                <!--begin::Close-->
                <div b-cpu6lo70wp="" class="btn btn-sm btn-icon btn-active-color-primary" data-bs-dismiss="modal">
                    <i b-cpu6lo70wp="" class="ki-duotone ki-cross fs-1">
                        <span b-cpu6lo70wp="" class="path1"></span>
                        <span b-cpu6lo70wp="" class="path2"></span>
                    </i>
                </div>
                <!--end::Close-->
            </div>
            <!--end::Modal header-->
            <!--begin::Modal body-->
            <div b-cpu6lo70wp="" class="modal-body py-lg-10 px-lg-10">
                <!--begin::Stepper-->
                <div b-cpu6lo70wp="" class="stepper stepper-pills stepper-column d-flex flex-column flex-xl-row flex-row-fluid" id="kt_modal_create_app_stepper" data-kt-stepper="true">

                    <!--begin::Content-->
                    <div b-cpu6lo70wp="" class="flex-row-fluid py-lg-5 px-lg-15">
                        <!--begin::Form-->
                        <!--end::Form-->

                        <form method="post" class="form fv-plugins-bootstrap5 fv-plugins-framework"  enctype="multipart/form-data" asp-area="Admin" asp-page="/PublicContentEditor" asp-page-handler="EditAfVideo">

                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>


                            <div class="row col-12">
                                <input asp-for="@Model.AffiliateVideoId" id="AfVHiddenId" hidden>
                                <input asp-for="@Model.VideoMedia" id="VideoMediaHiddenId" hidden>


                            </div>
                            <div class="row col-12">
                                <div class="form-group col-6">
                                    <label asp-for="@Model.VideoTitleAr" class="control-label d-flex align-items-center fs-5 fw-semibold mb-2">@sharedResource["Title Ar"]</label>
                                    <input asp-for="@Model.VideoTitleAr" id="VideoTitleArId" class="form-control  form-control-lg form-control-solid"  />
                                    <span asp-validation-for="@Model.VideoTitleAr" class="text-danger"></span>
                                </div>
                                <div class="form-group col-6">
                                    <label asp-for="@Model.VideoTitleEn" class="control-label d-flex align-items-center fs-5 fw-semibold mb-2">@sharedResource["Title En"]</label>
                                    <input asp-for="@Model.VideoTitleEn" id="VideoTitleEnId" class="form-control form-control-lg form-control-solid" />
                                    <span asp-validation-for="@Model.VideoTitleEn" class="text-danger"></span>
                                </div>

                            </div>
                            <div class="row col-12">
                                <div class="form-group col-12">
                                    <label asp-for="@Model.VideoMiniDescAr" class="control-label  d-flex align-items-center fs-5 fw-semibold mb-2">@sharedResource["Video Mini Desc Ar"]</label>
                                    <textarea asp-for="@Model.VideoMiniDescAr" id="VideoMiniDescArId" class="form-control form-control-lg form-control-solid"></textarea>
                                    <span asp-validation-for="@Model.VideoMiniDescAr" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row col-12">
                                <div class="form-group col-12">
                                    <label asp-for="@Model.VideoMiniDescEn" class="control-label  d-flex align-items-center fs-5 fw-semibold mb-2">@sharedResource["Video Mini Desc En"]</label>
                                    <textarea asp-for="@Model.VideoMiniDescEn" id="VideoMiniDescEnId" class="form-control form-control-lg form-control-solid"></textarea>
                                    <span asp-validation-for="@Model.VideoMiniDescEn" class="text-danger"></span>
                                </div>

                            </div>
                            <div class="col-md-12 form-group pt-3">
                                <iframe class="AfVideoMedia" src="frontsite/img/Affiliate.mp4" width="300" frameborder="0"> </iframe>


                            </div>
                            <div class="col-md-12 form-group" id="BrowseId">
                                <label for="formFile" class="form-label d-flex align-items-center fs-5 fw-semibold mb-2">@sharedResource["Video Media"]</label>
                                <input class="form-control" name="Editfile" type="file">
                            </div>
                            <div class="row col-12">
                                <div class="form-group col-12" id="UrlId">
                                    <label asp-for="@Model.VideoUrl" class="control-label  d-flex align-items-center fs-5 fw-semibold mb-2">@sharedResource["Video Url"]</label>
                                    <input asp-for="@Model.VideoUrl" id="VideoUrlId" class="form-control form-control-lg form-control-solid" />
                                    <span asp-validation-for="@Model.VideoUrl" class="text-danger"></span>
                                </div>
                            </div>
                            <br />
                            <div class="row col-12">
                                <div class="form-group col-6">
                                    <div class="form-check">
                                        <input asp-for="@Model.IsUrl" id="IsUrlId" class="form-check-input" type="checkbox">
                                        <label for="@Model.IsUrl" class="form-check-label  d-flex align-items-center fs-5 fw-semibold mb-2">@sharedResource["Is Url"]</label>
                                        <span asp-validation-for="@Model.IsUrl" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>



                            <div class="d-flex flex-stack pt-10 m-0">
                                <button type="button" class="btn btn-lg btn-light-primary me-3" data-bs-dismiss="modal">
                                    <i b-cpu6lo70wp="" class="ki-duotone ki-arrow-left fs-3 me-1">
                                        <span b-cpu6lo70wp="" class="path1"></span>
                                        <span b-cpu6lo70wp="" class="path2"></span>
                                    </i>@sharedResource["Close"]
                                </button>
                                <button type="submit" class="btn btn-lg btn-primary" id="add-btn">
                                    @sharedResource["Edit"] <i b-cpu6lo70wp="" class="ki-duotone ki-arrow-right fs-3 ms-2 me-0">
                                        <span b-cpu6lo70wp="" class="path1"></span>
                                        <span b-cpu6lo70wp="" class="path2"></span>
                                    </i>
                                </button>
                            </div>

                        </form>

                    </div>
                    <!--end::Content-->
                </div>
                <!--end::Stepper-->
            </div>
            <!--end::Modal body-->
        </div>
        <!--end::Modal content-->
    </div>
    <!--end::Modal dialog-->
</div>

















