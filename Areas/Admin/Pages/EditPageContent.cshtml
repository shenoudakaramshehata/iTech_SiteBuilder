@page
@model iTech.Areas.Admin.Pages.EditPageContentModel
@Html.AntiForgeryToken()
@{
	ViewBag.Title = @sharedResource["Edit Page Content"];
	ViewBag.pTitle = @sharedResource["Edit Page Content"];
	
}

<div class="d-flex flex-column flex-column-fluid">

    <!--begin::Toolbar-->
    <div id="kt_app_toolbar" class="app-toolbar  py-3 py-lg-6 ">

        <!--begin::Toolbar container-->
        <div id="kt_app_toolbar_container" class="app-container  container-fluid d-flex flex-stack ">


            <!--begin::Page title-->
            <div data-kt-swapper="true" data-kt-swapper-mode="{default: 'prepend', lg: 'prepend'}" data-kt-swapper-parent="{default: '#kt_app_content_container', lg: '#kt_app_toolbar_container'}" class="page-title d-flex flex-column justify-content-center flex-wrap me-3 mb-5 mb-lg-0">
                <!--begin::Title-->
                <h1 class="page-heading d-flex text-dark fw-bold fs-3 flex-column justify-content-center my-0">
                    @sharedResource["Page Content Editor"]
                </h1>
                <!--end::Title-->

            </div>
            <!--end::Page title-->
            <!--begin::Action group-->
            <div class="d-flex align-items-center gap-2">
                
            </div>
            <!--end::Action group-->
        </div>
        <!--end::Toolbar container-->
    </div>
    <!--end::Toolbar-->
    <!--begin::Content-->
    <div id="kt_app_content" class="app-content  flex-column-fluid ">


        <!--begin::Content container-->
        <div id="kt_app_content_container" class="app-container  container-fluid ">
           
            <!--end::Layout Builder Notice-->
            <!--begin::Card-->
            <div class="card">
                <!--begin::Header-->
                <div class="card-header card-header-stretch overflow-auto" style="height: 5.5rem;">
					<h1 style="padding-top: 2rem;">@sharedResource["Edit Page Content"]</h1>
                </div>
                <!--end::Header-->
                <!--begin::Form-->
                <!--begin::Body-->
                <div class="card-body">

					<!-- begin row  Arabic content -->
					<form method="post">
						<input type="hidden" asp-for="PageContent.PageContentId" />
						<div class="row mt-2">
							<div class="col-lg-12">
								<div class="card">
									<div class="card-header">
										<h6 class="card-title mb-0 fs-3 ">@Model.PageContent.PageTitleAr</h6>
										<input asp-for="PageContent.PageTitleAr" hidden />
									</div>
									<div class="card-body">
										<textarea asp-for="PageContent.ContentAr " id="textareacontent" class="form-control"> </textarea>
										<span asp-validation-for="PageContent.ContentAr" class="text-danger"></span>
									</div>
								</div>
							</div>

						</div>
						<!-- end row -->
						<!-- begin row  Arabic content -->
						<div class="row mt-2">
							<div class="col-lg-12">
								<div class="card">
									<div class="card-header">
										<h6 class="card-title mb-0 fs-4">@Model.PageContent.PageTitleEn</h6>
										<input asp-for="PageContent.PageTitleEn" hidden />
									</div>
									<div class="card-body">
										<textarea asp-for="PageContent.ContentEn " id="textareacontent" class="form-control"></textarea>
										<span asp-validation-for="PageContent.ContentEn" class="text-danger"></span>
									</div>
								</div>
							</div>
						</div>

						<div class="d-flex flex-stack pt-10 m-0">
							<a asp-page="./PublicContentEditor" type="button" class="btn btn-lg btn-light-primary me-3">
								<i b-cpu6lo70wp="" class="ki-duotone ki-arrow-left fs-3 me-1">
									<span b-cpu6lo70wp="" class="path1"></span>
									<span b-cpu6lo70wp="" class="path2"></span>
								</i>@sharedResource["Close"]
							</a>
							<button class="btn btn-lg btn-primary">
								@sharedResource["Edit"] <i b-cpu6lo70wp="" class="ki-duotone ki-arrow-right fs-3 ms-2 me-0">
									<span b-cpu6lo70wp="" class="path1"></span>
									<span b-cpu6lo70wp="" class="path2"></span>
								</i>
							</button>
						</div>
					</form>
                </div>
                <!--end::Body-->
                <!--end::Form-->
            </div>
            <!--end::Card-->
        </div>
        <!--end::Content container-->
    </div>
    <!--end::Content-->
</div>

	


	

	<script src="~/js/tinymce/tinymce.min.js" referrerpolicy="origin"></script>

	<script>
		tinymce.init({             
			selector: '#textareacontent',
			statusbar: false,
			promotion: false,
			branding: false,
			
		});
		
	</script>

