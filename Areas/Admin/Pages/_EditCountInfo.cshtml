@{
}
@model iTech.Models.CountInfo

<div class="modal fade" id="showCountEditModal" tabindex="-1" aria-labelledby="AddModalLabel" aria-hidden="true" role="dialog">
    <!--begin::Modal dialog-->
    <div b-cpu6lo70wp="" class="modal-dialog modal-dialog-centered mw-900px">
        <!--begin::Modal content-->
        <div b-cpu6lo70wp="" class="modal-content">
            <!--begin::Modal header-->
            <div b-cpu6lo70wp="" class="modal-header">
                <!--begin::Modal title-->
                <h2 b-cpu6lo70wp="">@(sharedResource["Edit Count Info"])</h2>
                <!--end::Modal title-->
                <!--begin::Close-->
                <div b-cpu6lo70wp="" class="btn btn-sm btn-icon btn-active-color-primary" data-bs-dismiss="modal">
                    <i b-cpu6lo70wp="" class="ki-duotone ki-cross fs-1">
                        <span b-cpu6lo70wp="" class="path1"></span>
                        <span b-cpu6lo70wp="" class="path2"></span>
                    </i>
                </div>
                <!--end::Close-->
            </div>
            <!--end::Modal header-->
            <!--begin::Modal body-->
            <div b-cpu6lo70wp="" class="modal-body py-lg-10 px-lg-10">
                <!--begin::Stepper-->
                <div b-cpu6lo70wp="" class="stepper stepper-pills stepper-column d-flex flex-column flex-xl-row flex-row-fluid" id="kt_modal_create_app_stepper" data-kt-stepper="true">

                    <!--begin::Content-->
                    <div b-cpu6lo70wp="" class="flex-row-fluid py-lg-5 px-lg-15">
                        <!--begin::Form-->
                        <!--end::Form-->

                        <form class="form fv-plugins-bootstrap5 fv-plugins-framework"  asp-area="Admin" asp-page="/PublicContentEditor" asp-page-handler="EditCountInfo">
                            <div class="modal-body">
                                <div class="row g-3">

                                    <input asp-for="@Model.CountInfoId" id="HiddenCountInfoId" value="@Model.CountInfoId" hidden>


                                    <div class="col-lg-12">
                                        <div>
                                            <label for="@Model.TitleAR" class="form-label d-flex align-items-center fs-5 fw-semibold mb-2">@sharedResource["Arabic Title"]</label>
                                            <input data-val-required="@sharedResource["Enter Arabic Title"]" id="CountTitleArId" type="text" asp-for="@Model.TitleAR" class="form-control form-control-lg form-control-solid" placeholder="@sharedResource["Enter Arabic Title"]" required />
                                            <span asp-validation-for="@Model.TitleAR" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-lg-12">
                                        <div>
                                            <label for="@Model.TitleEN" class="form-label d-flex align-items-center fs-5 fw-semibold mb-2">@sharedResource["English Title"]</label>
                                            <input data-val-required="@sharedResource["Enter English Title"]" id="CountTitleEnId" type="text" asp-for="@Model.TitleEN" class="form-control form-control-lg form-control-solid" placeholder="@sharedResource["Enter English Title"]" required />
                                            <span asp-validation-for="@Model.TitleEN" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-lg-12">
                                        <div>
                                            <label for="@Model.DescAR" class="form-label d-flex align-items-center fs-5 fw-semibold mb-2">@sharedResource["Arabic Description"]</label>
                                            <textarea data-val-required="@sharedResource["Enter Arabic Description"]" id="CountBriefArId" type="text" asp-for="@Model.DescAR" class="form-control form-control-lg form-control-solid" placeholder="@sharedResource["Enter Arabic Description"]" required></textarea>
                                            <span asp-validation-for="@Model.DescAR" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="col-lg-12">
                                        <div>
                                            <label for="@Model.DescEN" class="form-label d-flex align-items-center fs-5 fw-semibold mb-2">@sharedResource["English Description"]</label>
                                            <textarea data-val-required="@sharedResource["Enter English Description"]" id="CountBriefEnId" type="text" asp-for="@Model.DescEN" class="form-control form-control-lg form-control-solid" placeholder="@sharedResource["Enter English Description"]" required></textarea>
                                            <span asp-validation-for="@Model.DescEN" class="text-danger"></span>
                                        </div>
                                    </div>

                                </div>
                                <!--end row-->
                            </div>
                            <div class="d-flex flex-stack pt-10 m-0">
                                <button type="button" class="btn btn-lg btn-light-primary me-3" data-bs-dismiss="modal">
                                    <i b-cpu6lo70wp="" class="ki-duotone ki-arrow-left fs-3 me-1">
                                        <span b-cpu6lo70wp="" class="path1"></span>
                                        <span b-cpu6lo70wp="" class="path2"></span>
                                    </i>@sharedResource["Close"]
                                </button>
                                <button type="submit" class="btn btn-lg btn-primary" id="add-btn">
                                    @sharedResource["Edit"] <i b-cpu6lo70wp="" class="ki-duotone ki-arrow-right fs-3 ms-2 me-0">
                                        <span b-cpu6lo70wp="" class="path1"></span>
                                        <span b-cpu6lo70wp="" class="path2"></span>
                                    </i>
                                </button>
                            </div>
                        </form>

                    </div>
                    <!--end::Content-->
                </div>
                <!--end::Stepper-->
            </div>
            <!--end::Modal body-->
        </div>
        <!--end::Modal content-->
    </div>
    <!--end::Modal dialog-->
</div>
