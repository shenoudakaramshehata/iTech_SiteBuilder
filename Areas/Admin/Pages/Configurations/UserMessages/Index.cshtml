<script>
    $(document).ready(function () {
        var domainUrl = document.getElementById("UrlId").value;
        $("#tblList").DataTable({
            "proccessing": true,
            "serverSide": true,
            "ajax": {
                //url: domainUrl + '/api/Lists/ListUserMessages'

                url: "/admin/Configurations/UserMessages/Index",
                type: 'POST',
                headers: { 'XSRF-TOKEN': $('@Html.AntiForgeryToken()').val() }
            },
            "columnDefs": [
                {
                    "targets": -1,
                    "data": null,
                    "render": function (data, type, row, meta) {
                        return `<a href="javascript:void(0)" data-bs-toggle="modal" class="btn btn-icon btn-bg-light btn-active-color-primary btn-sm me-1">
                                        <i class="ki-duotone ki-eye fs-2x" onclick="ShowUserMessageViewPopUp(${row.ContactUsID})">
                                                                            <span class="path1"></span>
                                                                    <span class="path2"></span>
                                                                    <span class="path3"></span>
                                                                    </i>
                                                             
                                                        </a>
                                                       

                                                        <a href="#" class="btn btn-icon btn-bg-light btn-active-color-primary btn-sm" data-bs-toggle="modal" href="javascript:void(0)">
                                                                            <i class="ki-duotone ki-trash fs-2" onclick="deleteMessage(${row.ContactUsID})">
                                                                <span class="path1"></span>
                                                                <span class="path2"></span>
                                                                <span class="path3"></span>
                                                                <span class="path4"></span>
                                                                <span class="path5"></span>
                                                            </i>
                                                        </a>`;
                    },
                    "sortable": false
                },
                { "name": "ContactUsID", "data": "ContactUsID", "targets": 0, "visible": false },
                { "name": "Name", "data": "Name", "targets": 1, "visible": true },
                { "name": "Email", "data": "Email", "targets": 2 },
                { "name": "Message", "data": "Message", "targets": 3 },
                {
                    "name": "SendingDate", "data": "SendingDate", "targets": 4,
                    "render": function (data, type, row, meta) {
                        if (type === "display" && data) {
                            return moment(data).format("MM/DD/YYYY");
                        }
                        return data;
                    }
                }



            ],
            "order": [[4, "desc"]],
            "language": {
                "lengthMenu": "Show _MENU_",
            },
            "dom":
                "<'row'" +
                "<'col-sm-6 d-flex align-items-center justify-conten-start'l>" +
                "<'col-sm-6 d-flex align-items-center justify-content-end'f>" +
                ">" +

                "<'table-responsive'tr>" +

                "<'row'" +
                "<'col-sm-12 col-md-5 d-flex align-items-center justify-content-center justify-content-md-start'i>" +
                "<'col-sm-12 col-md-7 d-flex align-items-center justify-content-center justify-content-md-end'p>" +
                ">",

        });
    });
    function ShowUserMessageViewPopUp(ContactId) {
        $.ajax({
            type: "GET",
            url: "/Admin/Configurations/UserMessages/Index?handler=SingleMessageForView",
            data: { "ContactId": ContactId },
            contentType: "application/json",
            dataType: "json",
            success: function (response) {
                console.log("Enter");

                document.getElementById("FullNameId").innerHTML = response.Name
                document.getElementById("EmailId").innerHTML = response.Email

                document.getElementById("DateId").innerHTML = response.SendingDate
                document.getElementById("MessageId").innerHTML = response.Message
                $('#ShowUserMsgViewPoup').modal('show');

            },
            failure: function (response) {
                alert(response);
            }
        });

    }
    function deleteMessage(ContactId) {
        $.ajax({
            type: "GET",
            url: "/Admin/Configurations/UserMessages/Index?handler=SingleMessageForDelete",
            data: { "ContactId": ContactId },
            contentType: "application/json",
            dataType: "json",
            success: function (response) {
                document.getElementById("DeleteMessageId").value = response.ContactUsID
                
                $('#deleteUserMsgRecordModal').modal('show');


            },
            failure: function (response) {
                alert(response);
            }
        });
    }
</script>