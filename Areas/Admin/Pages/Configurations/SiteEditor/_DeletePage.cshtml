@{
}
<div class="modal fade zoomIn" id="deleteRecordModal" tabindex="-1"
     aria-labelledby="deleteRecordLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-md">
        <div class="modal-content">
            <div class="modal-header bg-light p-3">
                <h6 class="modal-title" id="exampleModalLabel">Delete Page</h6>
                <button type="button" class="btn-close" data-bs-dismiss="modal"
                        aria-label="Close dialog" id="btn-close" tabindex="0"></button>
            </div>
            <div class="modal-body p-5 text-center">
                <lord-icon src="https://cdn.lordicon.com/gsqxdxog.json"
                           trigger="loop" colors="primary:#405189,secondary:#f06548"
                           style="width:90px;height:90px"></lord-icon>
                <div class=" text-center">


                    <h4 class="fw-medium">@sharedResource["You are about to delete This Page?"]</h4>
                    <p class="text-muted fs-14 mb-4 pt-1">
                    </p>
                    <div class="hstack gap-2 justify-content-center remove">
                        <button class="btn btn-link link-success fw-medium text-decoration-none" id="deleteRecord-close"
                                data-bs-dismiss="modal">
                            <i class="ri-close-line me-1 align-middle"></i>
                            @sharedResource["Close"]
                        </button>

                        <button class="btn btn-danger" onclick="DeletePostPage()" id="delete-record">


                            <i class="ri-delete-bin-line me-1 align-middle"></i>
                            @sharedResource["Yes,"]
                            @sharedResource["Delete It!!"]

                        </button>

                    </div>
                </div>

            </div>


        </div>
    </div>
</div>
