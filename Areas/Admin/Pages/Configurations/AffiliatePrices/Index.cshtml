<script>
        $(document).ready(function () {
            $("#tblList").DataTable({
                "proccessing": true,
                "serverSide": true,
                "ajax": {
                    url: "/admin/Configurations/AffiliatePrices/Index",
                    type: 'POST',
                    headers: { 'XSRF-TOKEN': $('@Html.AntiForgeryToken()').val() }
                },
                "columnDefs": [
                    {
                        "targets": -1,
                        "data": null,
                        "render": function (data, type, row, meta) {
                            return `<a href="javascript:void(0)" data-bs-toggle="modal" class="btn btn-icon btn-bg-light btn-active-color-primary btn-sm me-1">
                                   
                                             <i class="ki-duotone ki-eye fs-2x" onclick="ShowViewPopUp(${row.AffiliatePriceId})">
                                                                                        <span class="path1"></span>
                                                                                <span class="path2"></span>
                                                                                <span class="path3"></span>
                                                                                </i>
                                </a>
                                <a class="btn btn-icon btn-bg-light btn-active-color-primary btn-sm me-1" href="javascript:void(0)" data-bs-toggle="modal">
                                    <i class="ki-duotone ki-pencil fs-2" onclick="editButtonClick(${row.AffiliatePriceId})">
                                        <span class="path1"></span>
                                        <span class="path2"></span>
                                    </i>
                                </a>
                                <a href="#" class="btn btn-icon btn-bg-light btn-active-color-primary btn-sm" data-bs-toggle="modal" href="javascript:void(0)">
                                    <i class="ki-duotone ki-trash fs-2" onclick="deleteAffiliatePrices(${row.AffiliatePriceId})">
                                        <span class="path1"></span>
                                        <span class="path2"></span>
                                        <span class="path3"></span>
                                        <span class="path4"></span>
                                        <span class="path5"></span>
                                    </i>
                                </a>`;
                        },
                        "sortable": false
                    },
                    { "name": "AffiliatePriceId", "data": "AffiliatePriceId", "targets": 0, "visible": false },
                    { "name": "AffiliatePriceTitle", "data": "AffiliatePriceTitle", "targets": 1, "visible": true },
                    { "name": "From", "data": "From", "targets": 2 },
                    { "name": "To", "data": "To", "targets": 3 },
                    { "name": "Point", "data": "Point", "targets": 4 }
                ],
                "order": [[4, "desc"]],
                "language": {
                    "lengthMenu": "Show _MENU_",
                },
                "dom":
                    "<'row'" +
                    "<'col-sm-6 d-flex align-items-center justify-conten-start'l>" +
                    "<'col-sm-6 d-flex align-items-center justify-content-end'f>" +
                    ">" +
                    "<'table-responsive'tr>" +
                    "<'row'" +
                    "<'col-sm-12 col-md-5 d-flex align-items-center justify-content-center justify-content-md-start'i>" +
                    "<'col-sm-12 col-md-7 d-flex align-items-center justify-content-center justify-content-md-end'p>" +
                    ">",
                "createdRow": function (row, data, dataIndex) {
                    var tdElements = $(row).find('td');
                    $(tdElements[tdElements.length - 1]).addClass('text-end');
                }
            });
        });


    function editButtonClick(AffiliatePriceId) {
        $.ajax({
            type: "GET",
            beforeSend: function (xhr) {
                xhr.setRequestHeader("XSRF-TOKEN",
                    $('input:hidden[name="__RequestVerificationToken"]').val());
            }
            ,
            url: "/Admin/Configurations/AffiliatePrices/Index?handler=SingleAffiliatePricesForEdit",

            data: { "AffiliatePriceId": AffiliatePriceId },
            contentType: "application/json",
            dataType: "json",
            success: function (response) {

                document.getElementById("HiddenId").value = response.AffiliatePriceId
                document.getElementById("AffiliatePriceTitleID").value = response.AffiliatePriceTitle
                document.getElementById("FromID").value = response.From
                document.getElementById("ToID").value = response.To
                document.getElementById("PointID").value = response.Point
                $('#showEditModal').modal('show');


            },

            failure: function (response) {
                alert(response);
            }
        });
    }
    // === VIEW ===//
    function ShowViewPopUp(AffiliatePriceId) {

        $.ajax({
            type: "GET",
            url: "/Admin/Configurations/AffiliatePrices/Index?handler=SingleAffiliatePricesForView",
            data: { "AffiliatePriceId": AffiliatePriceId },
            contentType: "application/json",
            dataType: "json",
            success: function (response) {
                document.getElementById("AffiliatePriceTitleId").innerHTML = response.AffiliatePriceTitle
                document.getElementById("FromId").innerHTML = response.From
                document.getElementById("ToId").innerHTML = response.To
                document.getElementById("PointId").innerHTML = response.Point


                $('#QuickViewPoup').modal('show');
            },
            failure: function (response) {
                alert(response);
            }
        });

    }
    function deleteAffiliatePrices(AffiliatePriceId) {
        $.ajax({
            type: "GET",
            url: "/Admin/Configurations/AffiliatePrices/Index?handler=AffiliatePricesForDelete",
            data: { "AffiliatePriceId": AffiliatePriceId },
            contentType: "application/json",
            dataType: "json",
            success: function (response) {
                document.getElementById("DeleteAffiliatePriceId").value = response.AffiliatePriceId
                $('#deleteRecordModal').modal('show');


            },
            failure: function (response) {
                alert(response);
            }
        });
    }

</script>