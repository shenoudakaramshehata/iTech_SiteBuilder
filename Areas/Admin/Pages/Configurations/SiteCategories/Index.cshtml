@page
@model iTech.Areas.Admin.Pages.Configurations.SiteCategories.IndexModel
@{
}


@{
    ViewBag.Title = "Site Categories";
    ViewBag.pTitle = "Site Categories";
    ViewBag.pageTitle = "Site Categories";
}

<partial name="_DatchDelete" model="@Model.category" view-data="ViewData" />
<div class="d-flex flex-column flex-column-fluid">
    <!--begin::Toolbar-->
    <div id="kt_app_toolbar" class="app-toolbar  py-3 py-lg-6 ">
        <!--begin::Toolbar container-->
        <div id="kt_app_toolbar_container" class="app-container  container-fluid d-flex flex-stack ">
            <!--begin::Page title-->
            <div data-kt-swapper="true" data-kt-swapper-mode="{default: 'prepend', lg: 'prepend'}" data-kt-swapper-parent="{default: '#kt_app_content_container', lg: '#kt_app_toolbar_container'}" class="page-title d-flex flex-column justify-content-center flex-wrap me-3 mb-5 mb-lg-0">
                <!--begin::Title-->
                <h1 class="page-heading d-flex text-dark fw-bold fs-3 flex-column justify-content-center my-0">
                    @sharedResource["Site Categories"]
                </h1>
                <!--end::Title-->
            </div>
            <!--end::Page title-->
            <!--begin::Action group-->
            <div class="d-flex align-items-center gap-2">
                <div class="d-flex align-items-center gap-2 gap-lg-3">
                    <button type="button" class="btn btn-sm btn-light-primary" data-bs-toggle="modal" id="create-btn" data-bs-target="#AddModal">
                        <i class="ki-duotone ki-plus fs-2"></i> @sharedResource["Add Site Category"]
                    </button>
                    <!--end::Primary button-->
                </div>
            </div>
            <!--end::Action group-->
        </div>
        <!--end::Toolbar container-->
    </div>
    <div id="kt_app_content" class="app-content  flex-column-fluid ">


        <!--begin::Content container-->
        <div id="kt_app_content_container" class="app-container  container-fluid ">

            <div class="card">

                <div class="card-body">
                    <table id="tblList" class="table table-striped table-row-bordered gy-5 gs-7 border rounded">
                        <thead>
                            <tr class="fw-bold fs-6 text-gray-800 px-7">
                                <th hidden>id</th>
                                <th class="min-w-125px">@sharedResource["Arabic Title"]</th>
                                <th class="min-w-200px">@sharedResource["English Title"]</th>

                                <th class="min-w-125px">@sharedResource["Sort Order"]</th>
                                <th class="min-w-125px">@sharedResource["IsActive"]</th>
                                <th class="min-w-125px text-end">@sharedResource["Actions"]</th>
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>


                </div>

            </div>

        </div>

    </div>
</div>

<partial name="_EditPopup" model="@Model.category" view-data="ViewData" />
<partial name="_AddPopup" model="@Model.category" view-data="ViewData" />
<partial name="_ViewPopup" model="@Model.category" view-data="ViewData" />


<script src="~/Other/lib/jquery/dist/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        $("#tblList").DataTable({
            "proccessing": true,
            "serverSide": true,
            "ajax": {

                url: "/admin/Configurations/SiteCategories/Index",
                type: 'POST',
                headers: { 'XSRF-TOKEN': $('@Html.AntiForgeryToken()').val() }
            },
            "columnDefs": [
                {
                    "targets": -1,
                    "data": null,
                    "render": function (data, type, row, meta) {
                        return `<a href="javascript:void(0)" data-bs-toggle="modal" class="btn btn-icon btn-bg-light btn-active-color-primary btn-sm me-1">
                                                        <i class="ki-duotone ki-eye fs-2x" onclick="ShowViewPopUp(${row.SiteCategoryId})">
                                                                                <span class="path1"></span>
                                                                        <span class="path2"></span>
                                                                        <span class="path3"></span>
                                                                        </i>
                           
                                                            </a>
                                                            <a class="btn btn-icon btn-bg-light btn-active-color-primary btn-sm me-1" href="javascript:void(0)" data-bs-toggle="modal">
                                                                                <i class="ki-duotone ki-pencil fs-2" onclick="editButtonClick(${row.SiteCategoryId})">
                                                                    <span class="path1"></span>
                                                                    <span class="path2"></span>
                                                                </i>
                                                            </a>

                                                            <a href="#" class="btn btn-icon btn-bg-light btn-active-color-primary btn-sm" data-bs-toggle="modal" href="javascript:void(0)">
                                                                                    <i class="ki-duotone ki-trash fs-2" onclick="deleteCategory(${row.SiteCategoryId})">
                                                                    <span class="path1"></span>
                                                                    <span class="path2"></span>
                                                                    <span class="path3"></span>
                                                                    <span class="path4"></span>
                                                                    <span class="path5"></span>
                                                                </i>
                                                            </a>`;
                    },
                    "sortable": false
                },
                { "name": "SiteCategoryId", "data": "SiteCategoryId", "targets": 0, "visible": false },
                { "name": "TitleAr", "data": "TitleAr", "targets": 1, "visible": true },
                { "name": "TitleEn", "data": "TitleEn", "targets": 2 },
                { "name": "SortOrder", "data": "SortOrder", "targets": 3 },
                { "name": "IsActive", "data": "IsActive", "targets": 4 ,

                    "render": function (data, type, row, meta) {
                        if (row.IsActive) {
                            return `<span class="badge badge-light-success fs-7 fw-bold">@sharedResource["Active"]</span>`;
                        } else {
                            return `<span class="badge badge-light-danger fs-7 fw-bold">@sharedResource["In Active"]</span>`;
                        }
                    }
                
                }



            ],
            "order": [[2, "desc"]],
            "language": {
                "lengthMenu": "Show _MENU_",
            },
            "dom":
                "<'row'" +
                "<'col-sm-6 d-flex align-items-center justify-conten-start'l>" +
                "<'col-sm-6 d-flex align-items-center justify-content-end'f>" +
                ">" +

                "<'table-responsive'tr>" +

                "<'row'" +
                "<'col-sm-12 col-md-5 d-flex align-items-center justify-content-center justify-content-md-start'i>" +
                "<'col-sm-12 col-md-7 d-flex align-items-center justify-content-center justify-content-md-end'p>" +
                ">",
            "createdRow": function (row, data, dataIndex) {
                var tdElements = $(row).find('td');
                $(tdElements[tdElements.length - 1]).addClass('text-end');
            }
        });
    });

    function editButtonClick(SiteCategoryId) {
        console.log(SiteCategoryId)
        $.ajax({
            type: "GET",
            beforeSend: function (xhr) {
                xhr.setRequestHeader("XSRF-TOKEN",
                    $('input:hidden[name="__RequestVerificationToken"]').val());
            }
            ,
            url: "/Admin/Configurations/SiteCategories/Index?handler=SingleCategoryForEdit",

            data: { "SiteCategoryId": SiteCategoryId },
            contentType: "application/json",
            dataType: "json",
            success: function (response) {
                document.getElementById("HiddenId").value = response.SiteCategoryId
                document.getElementById("TitleArID").value = response.TitleAr
                document.getElementById("TitleEnID").value = response.TitleEn
                document.getElementById("EIsActiveId").checked = response.IsActive
                document.getElementById("SortOrderID").value = response.SortOrder


                $('#showEditModal').modal('show');


            },

            failure: function (response) {
                alert(response);
            }
        });
    }

    // === VIEW ===//
    function ShowViewPopUp(SiteCategoryId) {

        $.ajax({
            type: "GET",
            url: "/Admin/Configurations/SiteCategories/Index?handler=SingleSiteCategoriesForView",
            data: { "SiteCategoryId": SiteCategoryId },
            contentType: "application/json",
            dataType: "json",
            success: function (response) {
                if(response.Pic!=null){
                    document.getElementById("PicId").src = '/' + response.Pic
                }
                
                document.getElementById("TitleENCATEGORYId").innerHTML = response.TitleEn
                document.getElementById("TitleARCATEGORYId").innerHTML = response.TitleAr
                document.getElementById("SORTORDERCATEGORYId").innerHTML = response.SortOrder
                if (response.IsActive == true) {
                    document.getElementById("DIsActiveId").innerHTML = "Active"

                }
                else {
                    document.getElementById("DIsActiveId").innerHTML = "Not Active"
                }


                $('#QuickViewPoup').modal('show');
                console.log(response);
            },
            failure: function (response) {
                alert(response);
            }
        });

    }


    function deleteCategory(SiteCategoryId) {

            console.log(SiteCategoryId)
        $.ajax({
            type: "GET",
            url: "/Admin/Configurations/SiteCategories/Index?handler=SingleCategoryForDelete",
            data: { "SiteCategoryId": SiteCategoryId },
            contentType: "application/json",
            dataType: "json",
            success: function (response) {
                document.getElementById("DeleteCategoryId").value = response.SiteCategoryId
                $('#deleteRecordModal').modal('show');


            },
            failure: function (response) {
                alert(response);
            }
        });
    }
</script>