        function editButtonClick(PublicHomeContentId) {
        $.ajax({
            type: "GET",
            beforeSend: function (xhr) {
                xhr.setRequestHeader("XSRF-TOKEN",
                    $('input:hidden[name="__RequestVerificationToken"]').val());
            }
            ,
            url: "/CRM/Configurations/ManagePublicHomeContent/Index?handler=SinglePublicHomeContentForEdit",

                data: { "PublicHomeContentId": PublicHomeContentId },
            contentType: "application/json",
            dataType: "json",
            success: function (response) {
                document.getElementsByClassName('categoryImgCla')[0].src = "/" + response.Pic
                    document.getElementById("CategoryHiddenId").value = response.PublicHomeContentId
                document.getElementById("CategoryPicHiddenId").value = response.Pic
                    document.getElementById("CategoryTLARId").value = response.AboutSectionTitleAr
                    document.getElementById("CategoryTLENId").value = response.AboutSectionTitleEn
                document.getElementById("IsActiveId").checked = response.AboutSectionDescEn
                document.getElementById("SortOrderId").value = response.AboutSectionDescAr


                $('#showEditModal').modal('show');


            },

            failure: function (response) {
                alert(response);
            }
        });
    }
        function ShowViewPopUp(PublicHomeContentId) {

