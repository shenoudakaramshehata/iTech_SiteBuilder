            type: "GET",
            url: "/CRM/Configurations/ManagePublicHomeContent/Index?handler=SinglePublicHomeContentForView",
                data: { "PublicHomeContentId": PublicHomeContentId },
            contentType: "application/json",
            dataType: "json",
            success: function (response) {
                document.getElementById("DCategoryPicId").src = "/" + response.Pic
                    document.getElementById("DCategoryTLARId").innerHTML = response.AboutSectionTitleAr
                    document.getElementById("DCategoryTLENId").innerHTML = response.AboutSectionTitleEn
