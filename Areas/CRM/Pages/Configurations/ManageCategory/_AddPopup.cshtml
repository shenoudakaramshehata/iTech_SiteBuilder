@{
}

@model iTech.Models.SiteCategory

<div class="modal fade" id="AddModal" tabindex="-1" aria-labelledby="AddModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">

            <div class="modal-header bg-light p-3">
                <h5 class="modal-title" id="exampleModalLabel">@(sharedResource["Add New Category"])</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" id="close-modal"></button>
            </div>

            <form method="post" asp-area="CRM" asp-page="/Configurations/ManageCategory/Index" asp-page-handler="AddCategory" enctype="multipart/form-data" onsubmit="return validateMyForm();">
                <div class="modal-body">
                    <input type="hidden" id="id-field" />
                    <div class="row g-3">
                        
                        <div class="col-lg-12">
                            <div class="text-center col-lg-12">
                                <div class="position-relative d-inline-block">
                                    <div class="position-absolute bottom-0 end-0">
                                        <label for="file" class="mb-0" data-bs-toggle="tooltip" data-bs-placement="right" title=@(sharedResource["Select Image"])>
                                            <div class="avatar-xs cursor-pointer">
                                                <div class="avatar-title bg-light border rounded-circle text-muted">
                                                    <i class="ri-image-fill"></i>
                                                </div>
                                            </div>
                                        </label>
                                        <input class="form-control d-none hidefromHere" name="file" id="file" type="file"
                                               accept="image/*" required>
                                    </div>
                                    <div class="avatar-lg p-1">
                                        <div class="avatar-title bg-light rounded-circle">
                                            <img src="~/assets/images/users/user-dummy-img.jpg" id="lead-img" class="avatar-md rounded-circle object-cover removeFromHere" />
                                        </div>
                                    </div>
                                </div>
                                <h5 class="fs-13 mt-3">@sharedResource["Image"] </h5>
                            </div>
                        </div> 

                        <div class="col-lg-6">
                            <div>
                                <label for="@Model.TitleAr" class="form-label">@sharedResource["ArTitle"]</label>
                                <input data-val-required="@sharedResource["Enter ArTitle"]" type="text" asp-for="@Model.TitleAr" class="form-control" placeholder="@sharedResource["Enter ArTitle"]" required />
                                <span asp-validation-for="@Model.TitleAr" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div>
                                <label for="@Model.TitleEn" class="form-label">@sharedResource["ENTitle"]</label>
                                <input data-val-required="@sharedResource["Enter ENTitle"]" type="text" asp-for="@Model.TitleEn" class="form-control" placeholder="@sharedResource["Enter ENTitle"]" required />
                                <span asp-validation-for="@Model.TitleEn" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div>
                                <label for="@Model.SortOrder" class="form-label">@sharedResource["Sort Order"]</label>
                                <input data-val-required="@sharedResource["Enter Sort Order"]" type="number" asp-for="@Model.SortOrder" class="form-control" placeholder="@sharedResource["Enter Sort Order"]" required />
                                <span asp-validation-for="@Model.SortOrder" class="text-danger"></span>
                            </div>
                        </div>
                      <div class="col-lg-12">
                            <div class="form-check">
                                <input asp-for="@Model.IsActive" class="form-check-input" type="checkbox" id="default">
                                <label for="@Model.IsActive" class="form-check-label">@sharedResource["Active"]</label>
                                <span asp-validation-for="@Model.IsActive" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <!--end row-->
                </div>
                <div class="modal-footer">
                    <div class="hstack gap-2 justify-content-end">
                        <button type="button" class="btn btn-light" data-bs-dismiss="modal">@sharedResource["Close"]</button>
                        <button type="submit"  class="btn btn-success" id="add-btn">@sharedResource["Add Category"]</button>
                    </div>
                </div>
            </form>

        </div>
    </div>
</div>